<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title><%= content_for?(:title) ? yield(:title) : "Blog a Day" %></title>

    <%= stylesheet_link_tag    "application" %>
    <%= javascript_include_tag "vendor/modernizr" %>
    <%= csrf_meta_tags %>
  </head>

  <body>
    <header>
      <% if flash[:notice] %>
        <div data-alert class="notice-flash">
          <%= flash[:notice] %> <a href="#" class="close">&times;</a>
        </div>
      <% end %>
      <% if flash[:alert] %>
        <div data-alert class="alert-flash">
          <%= flash[:alert] %> <a href="#" class="close">&times;</a>
        </div>
      <% end %>

      <% if current_user %>
        <%= link_to("Logout", :logout, method: :delete) %>
        <%= link_to("Edit", edit_user_path(current_user.id)) %>
        <%= link_to("Create Post", new_user_post_path(current_user.id)) %>
        <%= link_to("Profile", :myprofile) %>
      <% else %>
        <%= link_to("Sign Up", :signup) %>
        <%= link_to("Login", :login) %>
      <% end %>
    </header>

    <main>
      <%= yield %>
    </main>

    <footer>
      
    </footer>

    <%= javascript_include_tag "application", 'data-turbolinks-track' => true %>

  </body>
</html>
