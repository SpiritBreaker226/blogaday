<section class="comments">
	<h2 class="hide">Comments For Post <%= @post.title %></h2>

	<% @comments.each do |comment| %>
		<p>
			<%= comment.body %>
			<br><br>
			<% if current_user && current_user.id == comment.user_id %>
				<footer class="current_user_comment_controls_for_<%= comment.id %>">
					<%= link_to("Edit", edit_post_comment_path(@post, comment)) %>
					<%= link_to("Delete", [ @post, comment ], method: :delete, data: {confirm: "Are you sure you want to delete this comment?"}) %>
				</footer>
			<% end %>
		</p>
	<% end %>

	<%= paginate @comments %>
</section>
