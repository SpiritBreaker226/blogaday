<article class="post-details">
	<header class="post-details-header">
		<h2 class="post-details-title"><%= @post.title %></h2>
		by <%= @post.user.username %>
		<br>
		<i class="post-details-date">
			<%= time_tag @post.created_at, pubdate: true do %>
				<%= @post.created_at.strftime("%B %d, %Y")  %>
			<% end %>
		</i>
	</header>

	<p class="post-details-content"><%= @post.body %></p>

	<% if current_user && current_user.id == @post.user_id %>
		<%= link_to("Edit", edit_user_post_path(current_user, @post)) %>
		<%= link_to"Delete", @post, method: :delete, data: {confirm: "Are you sure you want to delete this post?"} %>
	<% end %>
</article>