<%= form_for @user do |f| %>
	<% if @user.errors.any? %>
		<%= render partial: 'shared/error_message', locals: { errors: @user.errors } %>
	<% end %>

	<div class="form-field">
		<%= f.label :first_name, "First Name" %>
		<%= f.text_field :first_name %>
	</div>

	<div class="form-field">
		<%= f.label :last_name, "Last Name" %>
		<%= f.text_field :last_name %>
	</div>

	<div class="form-field">
		<%= f.label :username, "Username" %>
		<%= f.text_field :username %>
	</div>

	<div class="form-field">
		<%= f.label :email %>
		<%= f.text_field :email, placeholder: "sample@blogaday.com" %>
	</div>

	<div class="form-field">
		<%= f.label :password %>
		<%= f.password_field :password, placeholder: "minimum 8 characters, least one character must be uppercase, lowercase and number" %>
	</div>

	<div class="form-field">
		<%= f.label :password_confirmation, "Password Confirmation" %>
		<%= f.password_field :password_confirmation %>
	</div>

	<div class="form-field">
		<%= f.submit local[:submit_button_text], class: "submit expand" %>
	</div>
<% end %>
